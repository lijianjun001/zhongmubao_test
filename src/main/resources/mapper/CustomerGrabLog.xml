<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongmubao.api.dao.CustomerGrabLogDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->

    <select id="getCustomerGrabLogById" resultType="CustomerGrabLog">
        <!-- 具体的sql -->
        SELECT
        *
        FROM
        CustomerGrabLog
        WHERE
        id = #{id} limit 1
    </select>

    <select id="pagerCustomerGrabLogList" resultType="CustomerGrabLog">
        SELECT
        *
        FROM
        CustomerGrabLog
        ORDER BY
        id
        LIMIT #{offset}, #{limit}
    </select>

    <insert id="insertCustomerGrabLog">
        <!-- ignore 主键冲突，报错 -->
        INSERT ignore INTO CustomerGrabLog (
			     Type, 
	     CustomerId, 
	     IsGrab, 
	     Created, 
	     Modified 
		)
        VALUES (
			     #{type}, 
	     #{customerId}, 
	     #{isGrab}, 
	     #{created}, 
	     #{modified} 
		)
    </insert>
</mapper>