<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongmubao.api.dao.ExBlackListDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->

    <select id="getExBlackListById" resultType="ExBlackList">
        <!-- 具体的sql -->
        SELECT
        *
        FROM
        ExBlackList
        WHERE
        id = #{id} limit 1
    </select>

    <select id="pagerExBlackListList" resultType="ExBlackList">
        SELECT
        *
        FROM
        ExBlackList
        ORDER BY
        id
        LIMIT #{offset}, #{limit}
    </select>

    <insert id="insertExBlackList">
        <!-- ignore 主键冲突，报错 -->
        INSERT ignore INTO ExBlackList (
        CustomerId,
        Remark,
        Deleted,
        Created,
        Modified
        )
        VALUES (
        #{customerId},
        #{remark},
        #{deleted},
        #{created},
        #{modified}
        )
    </insert>
</mapper>