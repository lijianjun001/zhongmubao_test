<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongmubao.api.dao.ExtBannerDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->

    <select id="getExtBannerById" resultType="ExtBanner">
        <!-- 具体的sql -->
        SELECT
        *
        FROM
        ExtBanner
        WHERE
        id = #{id} limit 1
    </select>

    <select id="pagerExtBannerList" resultType="ExtBanner">
        SELECT
        *
        FROM
        ExtBanner
        ORDER BY
        id
        LIMIT #{offset}, #{limit}
    </select>

    <insert id="insertExtBanner">
        <!-- ignore 主键冲突，报错 -->
        INSERT ignore INTO ExtBanner (
        Title,
        Link,
        ImgUrl,
        Sort,
        Deleted,
        Created
        )
        VALUES (
        #{title},
        #{link},
        #{imgUrl},
        #{sort},
        #{deleted},
        #{created}
        )
    </insert>
</mapper>