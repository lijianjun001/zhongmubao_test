<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongmubao.api.dao.ExtNoticeDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->

    <select id="getExtNoticeById" resultType="ExtNotice">
        <!-- 具体的sql -->
        SELECT
        *
        FROM
        ExtNotice
        WHERE
        id = #{id} limit 1
    </select>

    <select id="pagerExtNoticeList" resultType="ExtNotice">
        SELECT
        *
        FROM
        ExtNotice
        ORDER BY
        id
        LIMIT #{offset}, #{limit}
    </select>

    <insert id="insertExtNotice">
        <!-- ignore 主键冲突，报错 -->
        INSERT ignore INTO ExtNotice (
			     Title, 
	     Content, 
	     Pic, 
	     Link, 
	     Type, 
	     Created, 
	     Deleted 
		)
        VALUES (
			     #{title}, 
	     #{content}, 
	     #{pic}, 
	     #{link}, 
	     #{type}, 
	     #{created}, 
	     #{deleted} 
		)
    </insert>

    <select id="pageEffectiveExtNotice" resultType="ExtNotice">
        <!-- 具体的sql -->
        SELECT
        *
        FROM
        ExtNotice
    </select>

</mapper>