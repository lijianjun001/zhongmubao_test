<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongmubao.api.dao.SheepTypeDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->

    <select id="getSheepTypeById" resultType="SheepType">
        <!-- 具体的sql -->
        SELECT
        *
        FROM
        SheepType
        WHERE
        id = #{id} limit 1
    </select>

    <select id="pagerSheepTypeList" resultType="SheepType">
        SELECT
        *
        FROM
        SheepType
        ORDER BY
        id
        LIMIT #{offset}, #{limit}
    </select>

    <insert id="insertSheepType">
        <!-- ignore 主键冲突，报错 -->
        INSERT ignore INTO SheepType (
			     Name, 
	     Photo, 
	     Remark, 
	     Deleted, 
	     Created, 
	     Modified 
		)
        VALUES (
			     #{name}, 
	     #{photo}, 
	     #{remark}, 
	     #{deleted}, 
	     #{created}, 
	     #{modified} 
		)
    </insert>
</mapper>