<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongmubao.api.dao.StoreCategoryDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->

    <select id="getStoreCategoryById" resultType="StoreCategory">
        <!-- 具体的sql -->
        SELECT
        *
        FROM
        StoreCategory
        WHERE
        id = #{id} limit 1
    </select>

    <select id="pagerStoreCategoryList" resultType="StoreCategory">
        SELECT
        *
        FROM
        StoreCategory
        ORDER BY
        id
        LIMIT #{offset}, #{limit}
    </select>

    <insert id="insertStoreCategory">
        <!-- ignore 主键冲突，报错 -->
        INSERT ignore INTO StoreCategory (
        Name,
        Image,
        Deleted,
        Created,
        Modified
        )
        VALUES (
        #{name},
        #{image},
        #{deleted},
        #{created},
        #{modified}
        )
    </insert>
</mapper>