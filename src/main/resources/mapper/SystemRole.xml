<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongmubao.api.dao.SystemRoleDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->

    <select id="getSystemRoleById" resultType="SystemRole">
        <!-- 具体的sql -->
        SELECT
        *
        FROM
        SystemRole
        WHERE
        id = #{id} limit 1
    </select>

    <select id="pagerSystemRoleList" resultType="SystemRole">
        SELECT
        *
        FROM
        SystemRole
        ORDER BY
        id
        LIMIT #{offset}, #{limit}
    </select>

    <insert id="insertSystemRole">
        <!-- ignore 主键冲突，报错 -->
        INSERT ignore INTO SystemRole (
        Code,
        Name,
        Deleted,
        Created,
        Modified
        )
        VALUES (
        #{code},
        #{name},
        #{deleted},
        #{created},
        #{modified}
        )
    </insert>
</mapper>