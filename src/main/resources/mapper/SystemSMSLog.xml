<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongmubao.api.dao.SystemSMSLogDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->

    <select id="getSystemSMSLogById" resultType="SystemSMSLog">
        <!-- 具体的sql -->
        SELECT
        *
        FROM
        SystemSMSLog
        WHERE
        id = #{id} limit 1
    </select>

    <select id="pagerSystemSMSLogList" resultType="SystemSMSLog">
        SELECT
        *
        FROM
        SystemSMSLog
        ORDER BY
        id
        LIMIT #{offset}, #{limit}
    </select>

    <insert id="insertSystemSMSLog">
        <!-- ignore 主键冲突，报错 -->
        INSERT ignore INTO SystemSMSLog (
        Type,
        Phone,
        Code,
        Message,
        Expired,
        Created
        )
        VALUES (
        #{type},
        #{phone},
        #{code},
        #{message},
        #{expired},
        #{created}
        )
    </insert>
</mapper>