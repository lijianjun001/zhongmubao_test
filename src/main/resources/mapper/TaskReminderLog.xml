<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongmubao.api.dao.TaskReminderLogDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->

    <select id="getTaskReminderLogById" resultType="TaskReminderLog">
        <!-- 具体的sql -->
        SELECT
        *
        FROM
        TaskReminderLog
        WHERE
        id = #{id} limit 1
    </select>

    <select id="pagerTaskReminderLogList" resultType="TaskReminderLog">
        SELECT
        *
        FROM
        TaskReminderLog
        ORDER BY
        id
        LIMIT #{offset}, #{limit}
    </select>

    <insert id="insertTaskReminderLog">
        <!-- ignore 主键冲突，报错 -->
        INSERT ignore INTO TaskReminderLog (
			     ReminderId, 
	     Matter, 
	     Remark, 
	     Created 
		)
        VALUES (
			     #{reminderId}, 
	     #{matter}, 
	     #{remark}, 
	     #{created} 
		)
    </insert>
</mapper>